<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="orba_csp" translate="label" sortOrder="400" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>Orba CSP</label>
            <tab>security</tab>
            <resource>Orba_Csp::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="storefront_mode" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0"
                       showInStore="0" canRestore="1">
                    <label>Storefront CSP Mode</label>
                    <backend_model>Orba\Csp\Model\Config\Backend\Mode</backend_model>
                    <source_model>Orba\Csp\Model\Config\Source\Mode</source_model>
                </field>
                <field id="admin_mode" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0"
                       showInStore="0" canRestore="1">
                    <label>Admin CSP Mode</label>
                    <backend_model>Orba\Csp\Model\Config\Backend\Mode</backend_model>
                    <source_model>Orba\Csp\Model\Config\Source\Mode</source_model>
                </field>

                <field id="report_uri" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0"
                       showInStore="0" canRestore="1">
                    <label>Report URI</label>
                    <source_model>Orba\Csp\Model\Config\Source\ReportUri</source_model>
                    <backend_model>Orba\Csp\Model\Config\Backend\ReportUri</backend_model>
                </field>
            </group>
        </section>
    </system>
</config>